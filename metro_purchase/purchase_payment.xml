<openerp>
    <data>
    	<!-- purchase payment -->
        <record id="purchase_order_payment_form" model="ir.ui.view">
            <field name="name">purchase.payment.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">            	            
                <button name="purchase_approve" position="after">
                  <button name="%(open_pay_po)d"
                      string="Register Payments"
                      type="action" states="approved"/>
                </button>
                <page string="Incoming Shipments &amp; Invoices" position="after">
                	<page string="Pre Payments"> 
	                    <group name="payments" string="Payments" colspan="4">
	                        <field name="payment_ids" nolabel="1">
	                            <tree string="Payment">
	                                <field name="date"/>
	                                <field name="journal_id"/>
	                                <field name="partner_id"/>
	                                <field name="debit"/>
	                                <field name="credit"/>
	                            </tree>
	                        </field>
	                    </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
