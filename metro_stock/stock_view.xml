<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    
        <record id="view_material_request_tree" model="ir.ui.view">
            <field name="name">material.request.tree</field>
            <field name="model">material.request</field>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';grey:state == 'cancel';red:state not in ('cancel', 'done') and min_date &lt; current_date" string="Material Request">
                    <field name="name"/>
                    <field name="dept_id"/>
                    <field name="date"/>
                    <field name="stock_journal_id" groups="account.group_account_user"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_material_request_form" model="ir.ui.view">
            <field name="name">material.request.form</field>
            <field name="model">material.request</field>
            <field name="inherit_id" ref="view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="dept_id"/>
                </xpath>
                <xpath expr="//field[@name='move_lines']" position="replace">
                    <field name="move_lines" context="{'form_view_ref':'view_material_request_line_req_form', 'tree_view_ref':'view_material_request_line_req_tree'}"/>
                </xpath>
            </field>
        </record>
        <record id="view_material_request_search" model="ir.ui.view">
            <field name="name">stock.material.request.search</field>
            <field name="model">material.request</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="dept_id"/>
                    <field name="date"/>
                </xpath>
                <xpath expr="//group/filter[@string='Expected Date']" position="replace">
                    <filter string="Department" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'dept_id'}"/>
                </xpath>                
                <xpath expr="//group/filter[@string='Origin']" position="replace">
                </xpath>
            </field>
        </record>

        <record id="action_material_request_tree" model="ir.actions.act_window">
            <field name="name">Material Request</field>
            <field name="res_model">material.request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','internal')]</field>
            <field name="search_view_id" ref="view_material_request_search"/>
        </record>
        <menuitem action="action_material_request_tree" id="menu_action_material_request_tree" parent="menu_stock_warehouse_mgmt" sequence="4"/>
        
<!-- material request line -->
        <record id="view_material_request_line_req_tree" model="ir.ui.view">
            <field name="name">req.line.req.tree</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="user_id"/>
                    <field name="sale_id"/>
                    <field name="notes"/>
                </xpath>
            </field>
        </record>
        <record id="view_material_request_line_req_form" model="ir.ui.view">
            <field name="name">req.line.req.form</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
                <xpath expr="//field[@name='product_packaging']" position="before">
                    <field name="user_id"/>
                    <field name="sale_id"/>
                    <field name="notes"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_material_request_line_tree" model="ir.ui.view">
            <field name="name">req.line.tree</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
            <field name="inherit_id" ref="stock.view_movexs_tree"/>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="user_id"/>
                    <field name="sale_id"/>
                    <field name="notes"/>
                    <field name="dept_id"/>
                    <field name="date_order"/>
                </xpath>
            </field>
        </record>
        <record id="view_material_request_line_form" model="ir.ui.view">
            <field name="name">req.line.form</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
            <field name="inherit_id" ref="stock.view_move_form"/>
                <xpath expr="//field[@name='product_packaging']" position="before">
                    <field name="user_id"/>
                    <field name="sale_id"/>
                    <field name="notes"/>
                    <field name="dept_id"/>
                    <field name="date_order"/>
                </xpath>
            </field>
        </record>   
